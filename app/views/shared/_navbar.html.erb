<div class="container-fluid w-100 p-0">
  <nav class="navbar navbar-expand-lg navbar-light bg-secondary border-bottom border-primary">
    <div class="container">
      <!-- Logo -->
      <%= link_to "GiftA", root_path, class: "navbar-brand fw-bold text-primary" %>

      <!-- Toggle button for mobile -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navbar content -->
      <div class="collapse navbar-collapse" id="navbarToggler">
        <!-- Left links -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <% if user_signed_in? %>
            <% if current_user.admin? %>
              <li class="nav-item">
                <%= link_to "Admin Dashboard", admin_root_path, class: "nav-link text-white" %>
              </li>
            <% elsif current_user.agent? %>
              <li class="nav-item">
                <%= link_to "Agent Dashboard", agent_dashboard_path, class: "nav-link text-white" %>
              </li>
            <% else %>
              <li class="nav-item">
               <%= link_to "Dashboard", dashboard_path, class: "nav-link text-white" %>
              </li>
            <% end %>
          <% end %>
        </ul>

        <!-- Right links -->
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle d-flex align-items-center text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <%= image_tag(
                      current_user.avatar.attached? ? url_for(current_user.avatar) : "default-avatar.png",
                      class: "rounded-circle me-2",
                      width: 32,
                      height: 32,
                      alt: "User Avatar"
                    ) %>
                <span><%= current_user.name.presence || "My Profile" %></span>
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li><%= link_to "Profile", profile_path(current_user.id), class: "dropdown-item" %></li>
                <li><%= link_to "Settings", edit_user_registration_path, class: "dropdown-item" %></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "dropdown-item", data: { turbo: false } %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Log in", new_user_session_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign up", new_user_registration_path, class: "nav-link text-white" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</div>
