<h2>Edit Profile</h2>


<%= form_with(model: @profile, local: true) do |f| %>
  <div>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </div>

  <div>
    <%= f.label :interests, 'Tags (comma separated)' %><br>
    <%= f.text_field :tag_list %>
  </div>

  <div>
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </div>

  <%= f.submit "Update Profile" %>
<% end %>