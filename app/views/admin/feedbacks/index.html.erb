<h1>Feedbacks</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th>Status</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.user&.email || 'N/A' %></td>
        <td><%= truncate(feedback.content, length: 50) %></td>
        <td><%= feedback.status %></td>
        <td><%= feedback.created_at.strftime("%b %d, %Y") %></td>
        <td>
          <%= link_to "Show", admin_feedback_path(feedback), class: "btn btn-sm btn-primary" %>
          <%= link_to "Edit", edit_admin_feedback_path(feedback), class: "btn btn-sm btn-secondary" %>
          <%= link_to "Delete", admin_feedback_path(feedback), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New Feedback", new_admin_feedback_path, class: "btn btn-success" %>
