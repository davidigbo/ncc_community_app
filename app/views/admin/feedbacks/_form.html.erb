<%= form_with(model: [:admin, feedback], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :user_id, "User", class: "form-label" %>
    <%= form.collection_select :user_id, User.all, :id, :email, { prompt: "Select User" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :content, class: "form-label" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, Feedback.statuses.keys.map { |s| [s.titleize, s] }, {}, class: "form-select" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
