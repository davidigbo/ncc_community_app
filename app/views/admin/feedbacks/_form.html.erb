<h1>Leave Feedback for <%= @event.title %></h1>

<%= form_with model: [@event, @feedback], url: admin_event_feedbacks_path(@event), local: true do |f| %>

  <% if @feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>
      <ul>
        <% @feedback.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit "Submit Feedback" %>
  </div>
<% end %>
