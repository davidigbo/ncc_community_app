<%= form_with(model: [:admin, user], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <% if action_name == "new" %>
    <div class="mb-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :role, class: "form-label" %>
    <%= form.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :bio, class: "form-label" %>
    <%= form.text_area :bio, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
